# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' for local development
NODE_ENV=development

# Set to 'true' to enable debug logging
DEBUG_MODE=false

# Set to 'true' to bypass some security checks in development
DEV_BYPASS_SECURITY=false